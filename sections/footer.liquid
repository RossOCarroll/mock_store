<footer class="text-gray-600 relative bg-white">
  <div class="max-w-7xl mx-auto px-4 py-6">
    <nav class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      
      {% for block in section.blocks %}
        <div class="footer-column">
          <h2 class="font-bold">{{ block.settings.heading | default: "Block Title" }}</h2>

          {% case block.type %}
            {% when 'navigation' %}
              <ul>
                {% for link in block.settings.linklist.links %}
                  <li class="text-base text-gray-500 hover:text-gray-900 uppercase"><a href="{{ link.url }}" class="hover:underline">{{ link.title }}</a></li>
                {% endfor %}
              </ul>

            {% when 'newsletter' %}
              <p class="text-base text-gray-500 hover:text-gray-900 uppercase">{{ block.settings.text }}</p>
              <form action="" method="post">
                <input type="email" placeholder="Enter your email" class="p-2 text-black">
                <button type="submit" class="bg-blue-500 p-2">Subscribe</button>
              </form>

            {% when 'text' %}
              <p class="text-base text-gray-500 hover:text-gray-900 uppercase">{{ block.settings.text }}</p>

          {% endcase %}
        </div>
      {% endfor %}
      
    </nav>
  </div>

  <div class="text-center py-4 border-t border-gray-700">
    <p>{{ section.settings.copyright | default: "© 2024 Your Store" }}</p>
  </div>
</footer>


{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "id": "copyright",
        "type": "text",
        "label": "Copyright text",
        "default": "© 2024 Your Store"
      }
    ],
    "max_blocks": 5,
    "blocks": [
      {
        "type": "navigation",
        "name": "Navigation Column",
        "settings": [
          {
            "type": "link_list",
            "id": "linklist",
            "label": "Navigation Menu"
          }
        ]
      },
      {
        "type": "newsletter",
        "name": "Newsletter Signup",
        "settings": [
          {
            "id": "heading",
            "type": "text",
            "label": "Heading",
            "default": "Subscribe to our newsletter"
          },
          {
            "id": "text",
            "type": "richtext",
            "label": "Description"
          }
        ]
      },
      {
        "type": "text",
        "name": "Text Block",
        "settings": [
          {
            "id": "heading",
            "type": "text",
            "label": "Heading",
            "default": "About Us"
          },
          {
            "id": "text",
            "type": "richtext",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Footer",
        "blocks": [
          { "type": "navigation" },
          { "type": "newsletter" },
          { "type": "text" }
        ]
      }
    ]
  }
  {% endschema %}
  