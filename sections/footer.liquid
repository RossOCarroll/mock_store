<footer  class="relative bg-white text-gray-500">
  <div class="max-w-7xl mx-auto px-4 py-6">
    <nav class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      
      {% for block in section.blocks %}
        <div class="footer-column">
          <h2 class="font-bold">{{ block.settings.heading }}</h2>

          {% case block.type %}
            {% when 'navigation' %}
              <ul>
                {% for link in block.settings.linklist.links %}
                  <li class="text-lg text-gray-500 hover:text-gray-900"><a href="{{ link.url }}" class="hover:underline">{{ link.title }}</a></li>
                {% endfor %}
              </ul>

            {% when 'newsletter' %}
              <p class="text-base text-gray-500 hover:text-gray-900 uppercase">{{ block.settings.text }}</p>
              <form action="" method="post">
                <input type="email" placeholder="Enter your email" class="p-2 text-black">
                <button class="bg-gray-900 hover:bg-gray-700 text-white px-4 py-2 border-2 border-gray-700 rounded-md" type="submit">Subscribe</button>
              </form>

            {% when 'text' %}
              <p class="text-base text-gray-500 hover:text-gray-900 uppercase">{{ block.settings.text }}</p>

          {% endcase %}
        </div>
      {% endfor %}
      
    </nav>
  </div>

  <div class="text-center py-4 border-t border-gray-700">
    <p>{{ section.settings.copyright | default: "Â© 2024 Your Store" }}</p>
  </div>
</footer>


{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "id": "copyright",
        "label": "Copyright text",
        "type": "text"
      }
    ],
    "max_blocks": 5,
    "blocks": [
      {
        "type": "newsletter",
        "name": "Newsletter",
        "settings": [
          {
            "id": "heading",
            "type": "text",
            "label": "Heading text"
          },
          {
            "id": "text",
            "type": "richtext",
            "label": "Body text"
          }
        ]
      },
      {
        "name": "Text",
        "type": "text",
        "settings": [
          {
            "id": "heading",
            "type": "text",
            "label": "Heading text"
          },
          {
            "id": "text",
            "type": "richtext",
            "label": "Body text"
          }
        ]
      },
      {
        "name": "Navigation column",
        "type": "navigation",
        "settings": [
          {
            "type": "link_list",
            "id": "linklist",
            "label": "Navigation menu"
          }
        ]
      }
    ]
  }
  {% endschema %}
  